{% extends 'layout.html.twig' %}

{% block title %}Chess Commentator Login{% endblock %}

{% block content %}

<div class="container-fluid text-center signin">

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="row content">
		<div class="col-sm-4 col-sm-offset-2 well">
				<h2>Sign In</h2>

				<form action="{{ path('login') }}" method="post">
					<div class="form-group">
						<input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" class="form-control" />
					</div>

					<div class="form-group">
						<input type="password" id="password" name="_password" placeholder="Password" class="form-control" />
					</div>
					<div class="form-group">
						<input type="hidden" name="_target_path" value="/" class="form-control" />

						<input type="hidden" name="_csrf_token" class="form-control"
							value="{{ csrf_token('authenticate') }}"
						>
					</div>

					<button type="submit" class="btn btn-primary">Login</button>
				</form>
		</div>

		<div class="col-sm-4" style="margin-top: 40px;">
			<p>Need an account? <a href="#">Register</a></p>
			<p>Forgot your password? <a href="#">Reset Password</a></p>
		</div>
	</div>
</div>

{% endblock %}

