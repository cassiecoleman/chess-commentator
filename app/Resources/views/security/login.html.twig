{% extends 'layout.html.twig' %}

{% block title %}Chess Commentator Login{% endblock %}

{% block content %}

<div class="container-fluid text-center">

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('login') }}" method="post" class="form-signin">
			<h2>Sign In</h2>

			<div class="form-group">
				<input type="text" id="username" name="_username" placeholder="Username" value="{{ last_username }}" class="form-control" />
			</div>

			<div class="form-group">
				<input type="password" id="password" name="_password" placeholder="Password" class="form-control" />
			</div>
			<div class="form-group">
				<input type="hidden" name="_target_path" value="/" class="form-control" />

				<input type="hidden" name="_csrf_token" class="form-control"
					value="{{ csrf_token('authenticate') }}"
				>
			</div>

			<button type="submit" class="btn btn-primary">Login</button>
		</form>
</div>

{% endblock %}

